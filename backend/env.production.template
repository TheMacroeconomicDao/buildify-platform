# =============================================================================
# Buildlify Backend Production Environment Configuration
# Скопируйте этот файл в .env и настройте значения для вашего сервера
# =============================================================================

# Application
APP_NAME=Buildlify
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://buildify.duckdns.org

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=buildlify_production
DB_USERNAME=buildlify_user
DB_PASSWORD=your_secure_database_password

# Broadcasting
BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@buildify.duckdns.org"
MAIL_FROM_NAME="${APP_NAME}"

# OpenAI Configuration (НАСТРОЕНО)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=
OPENAI_REQUEST_TIMEOUT=30

# Stripe Configuration (ОБЯЗАТЕЛЬНО НАСТРОИТЬ)
STRIPE_KEY=pk_live_your_stripe_public_key_here
STRIPE_SECRET=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# WebSocket Configuration - Soketi (рекомендуется для production)
PUSHER_APP_ID=buildlify-app
PUSHER_APP_KEY=buildlify-key
PUSHER_APP_SECRET=buildlify-secret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Альтернативно: Pusher Cloud (для простой настройки)
# PUSHER_APP_ID=your_pusher_app_id
# PUSHER_APP_KEY=your_pusher_key  
# PUSHER_APP_SECRET=your_pusher_secret
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security & Performance
SANCTUM_STATEFUL_DOMAINS=buildify.duckdns.org,www.buildify.duckdns.org
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# File Upload Limits
UPLOAD_MAX_FILESIZE=350M
POST_MAX_SIZE=350M

# Additional Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
